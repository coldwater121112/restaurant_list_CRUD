<h1 class="mb-1 restaurant-show-title">編輯餐廳</h1>
<div class="container">
  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">餐廳名稱：</label>
      <input type="text" id="name" name="name" class="form-control" value="{{ restaurant.name }}" required>
    </div>

    <div class="mb-3">
      <label for="name_en" class="form-label">餐廳英文名稱：</label>
      <input type="text" id="name_en" name="name_en" class="form-control" value="{{ restaurant.name_en }}" required>
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">分類：</label>
      <input list="categorys" class="form-control" name="category" id="category" value="{{ restaurant.category }}"
        required>
      <datalist id="categorys">
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>中東料理</option>
        <option>美式</option>
        <option>酒吧</option>
        <option>咖啡</option>
      </datalist>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">餐廳照片：</label>
      <input id="image" name="image" class="form-control" type="url" value="{{ restaurant.image }}" required>
    </div>

    <div class="mb-3">
      <label for="location" class="form-label">餐廳位置：</label>
      <input id="location" name="location" class="form-control" type="text" value="{{ restaurant.location }}" required>
    </div>

    <div class="mb-3">
      <label for="phone" class="form-label">餐廳電話：</label>
      <input id="phone" name="phone" class="form-control" type="tel" value="{{ restaurant.phone }}" required>
    </div>

    <div class="mb-3">
      <label for="google_map" class="form-label">google map：</label>
      <input id="google_map" name="google_map" class="form-control" type="url" value="{{ restaurant.google_map }}"
        required>
    </div>

    <div class="mb-3">
      <label for="rating" class="form-label">評分：</label>
      <input id="rating" name="rating" class="form-control" type="number" min="0" max="5" step="0.1"
        value="{{ restaurant.rating }}" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">敘述：</label>
      <textarea id="description" class="form-control" name="description" rows="3" cols="20"
        required>{{ restaurant.description }}</textarea>
    </div>

    <div class="mb-5 text-center">
      <button type="submit" class="btn btn-primary">
        確認修改
      </button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回首頁
        </button>
      </a>
      {{! 使用type="reset" 可以清除/還原輸入 }}
      <button type="reset" class="btn btn-outline-danger">重新輸入</button>
    </div>

  </form>
</div>